.top-btn-box{
  display: flex;
}
.form-item:first-child{
  margin-top: 1rem;
  line-height: 1.5rem;
}
.form-item-title{
  text-indent: 1em;
}
.form-list{
  width: 98%;
  margin-left: 1%;
}

.form-item-title-box{
    display: flex;
    background-color: #ccccd6;
    height: 3rem;
    line-height: 3rem;
    text-align: center;
    border-bottom: grey 1px solid;
}

.form-item-icon{
  margin-left:auto;
  font-size: large;
}

.form-item-content{
  background-color: #e2e1e4;
  line-height: 2rem;
}

.item-content-btn-box{
  display: flex;
}

.form-item-content-item{
  display: flex;
