  line-height: 1.5rem;
  margin-top: 0.75rem;
  margin-left:auto;
}

.form-item-content-item-text{
  text-indent: 2em;
}

.form-item-content-item-delete{
  width: 1.5rem;
  height: 1.5rem;
  background-color: red;
  border-radius: 50% 50%;
  text-align: center;
  font-size: large;
  font-weight: bold;
  color: white;
  line-height: 1.5rem;
